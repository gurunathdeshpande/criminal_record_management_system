    <script>
        // Function to redirect to edit_crimes.html or add_crimes.html based on action
        function redirectToEdit(action) {
            if (action === 'edit') {
                window.location.href = "edit_crimes.html";
            } else if (action === 'add') {
                window.location.href = "add_crimes.html";
            }
        }
