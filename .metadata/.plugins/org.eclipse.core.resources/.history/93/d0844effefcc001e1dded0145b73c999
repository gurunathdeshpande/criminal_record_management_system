<% 
    String crimeIdParam = request.getParameter("crimeid");
    int id = 0;
    if (crimeIdParam != null && !crimeIdParam.isEmpty()) {
        id = Integer.parseInt(crimeIdParam);
    }
%>
<p>Editable crime is : <%= id %></p>
<% 
    if (id != 0) {
        CrimeDAO cdao = new CrimeDAO(ConnectionProvider.getConnection());
        Crime crm = cdao.getCrimeById(id);
%>
   crime location is : <%= crm.getLocation() %>
<%
    } else {
%>
